// Spil som viser statistik over spillets gang
namespace spilsim;

class Program
{
    static void Main(string[] args)
    {
        int score; // int er en 32-bit integer
        double distance; // double er en 64-bit floating point
        char nytSpil; // char er en 16-bit unicode character
        bool energiFelt; // bool er en boolean
        short liv, fjenderDræbt; // short er en 16-bit integer

        score = 0; // initialiserer score til 0
        distance = 1200.76; // initialiserer distance til 1200.76
        nytSpil = 'j'; // initialiserer nytSpil til 'j'
        energiFelt = true; // initialiserer energiFelt til true
        liv = 3; // initialiserer liv til 3
        fjenderDræbt = 2; // initialiserer fjenderDræbt til 2

        // udskriver værdierne
        System.Console.WriteLine("Score: " + score);
        System.Console.WriteLine("Distance: " + distance);
        System.Console.WriteLine("Nyt spil: " + nytSpil);
        System.Console.WriteLine("Energifelt: " + energiFelt);
        System.Console.WriteLine("Liv: " + liv);
        System.Console.WriteLine("Fjender dræbt: " + fjenderDræbt);

        double benzin = 12.7; // initialiserer benzin til 12.7
        System.Console.WriteLine("Benzin: " + benzin);

        return; // returnerer fra Main-metoden hvorved programmet afsluttes


    }
}
